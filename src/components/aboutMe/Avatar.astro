---
import DownloadButton from "../Buttons/DownloadButton.astro";
import avatar from "./Images/Avatar.png";
import { Image } from "astro:assets";
---

<div class="flex flex-col justify-center gap-4 w-fit ">
    <div
        class="bg-[--border-button-color] rounded-xl h-fit w-fit p-1 shadow-sm avatar-inside"
    >
        <Image
            src={avatar}
            alt="Foto Ivan Patiño"
            title="Foto Ivan Patiño"
            width={300}
            class="avatar bg-[--secondary-bg-color] rounded-[--nested-radius]"
        />
    </div>
    <DownloadButton />
</div>



<style>
         
    .avatar-inside {
        --nested-radius: calc(0.75rem - 0.25rem);
    }


    .content-avatar {
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: center;
        gap: 1rem;
    }

    .avatar {
        width: 100%;
    }
    .content-avatar {
        width: 100%;
    }
</style>
