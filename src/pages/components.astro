---
import Badge from "@/components/Badge.astro";
import SectionContainer from "@/components/SectionContainer.astro";
import SocialPill from "@/components/SocialPill.astro";
import LinkedInIcon from "@/components/icons/Linkedin.astro";

import Layout from "../layouts/Layout.astro";

--- 

<Layout
  title="Componentes - Iván Patiño - Desarrollador y Programador Web Full Stack"
    description="Soy un desarrollador web full stack con experiencia en la creación de aplicaciones web modernas y escalables. Me apasiona aprender nuevas tecnologías y mejorar mis habilidades constantemente."
>
  <SectionContainer class="py-44 pb-32 flex flex-col gap-y-10">
    <article class="mb-10">
      <h1 class="mb-4 text-xl font-semibold">&lt;Badge /&gt;</h1>
      <Badge>Disponible para trabajar</Badge>
    </article>

    <article class="mb-10">
      <h1 class="mb-4 text-xl font-semibold">&lt;SocialPill /&gt;</h1>
      <div class="flex">
        <SocialPill href="https://www.linkedin.com/in/ivanpati%C3%B1o">
          <LinkedInIcon class="w-4 h-4 md:w-6 md:h-6" />
          LinkedIn
        </SocialPill>
      </div>
    </article>
  </SectionContainer>
</Layout>